@using Swlh.WebApp.Application.Dtos.ReportDtos
@using Swlh.WebApp.Controllers
@model ReportCreateDto

@{
    ViewData["Title"] = "Tạo báo cáo";
}

<h2>Tạo báo cáo mới</h2>

<div class="row">
    <div class="col-12 col-lg-8">
        <form asp-controller="@nameof(ReportController)[..^10]" asp-action="@nameof(ReportController.Create)" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="10" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <button class="btn btn-success" type="submit" value="Create">Gửi</button>
                <button class="btn btn-secondary" onclick="window.history.back()">Quay lại</button>
            </div>
        </form>
    </div>
</div>

