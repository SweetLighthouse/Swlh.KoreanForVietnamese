@using Swlh.WebApp.Controllers
@model IEnumerable<Swlh.WebApp.Domain.Entities.Word>

@{
    ViewData["Title"] = "Quản lý từ vựng";
}

<h1>Quản lý từ vựng</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Tạo mới</a>
</p>

<link rel="stylesheet" href="~/lib/datatables/2.3.0/dataTables.dataTables.min.css" />

<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WordKr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordVn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pronunciation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeaningKr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeaningVn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="@nameof(SearchController)[..^10]"
                       asp-action="@nameof(SearchController.Index)"
                       asp-route-query="@item.WordKr">@item.WordKr</a>
                </td>
                <td>
                    <a asp-controller="@nameof(SearchController)[..^10]"
                       asp-action="@nameof(SearchController.Index)"
                       asp-route-query="@item.WordVn">@item.WordVn</a>
                </td>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Pronunciation
                </td>
                <td>
                    @item.MeaningKr
                </td>
                <td>
                    @item.MeaningVn
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/datatables/2.3.0/dataTables.min.js"></script>
<script>
    let table = new DataTable('#myTable');
</script>