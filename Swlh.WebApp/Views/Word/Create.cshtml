@model Swlh.WebApp.Domain.Entities.Word

@{
    ViewData["Title"] = "Tạo từ vựng mới";
}

<h1>Tạo từ vựng mới</h1>

<div class="row">
    <div class="col-12 col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="WordKr" class="control-label fw-bold"></label>
                <input asp-for="WordKr" class="form-control" />
                <span asp-validation-for="WordKr" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="WordVn" class="control-label fw-bold"></label>
                <input asp-for="WordVn" class="form-control" />
                <span asp-validation-for="WordVn" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Type" class="control-label fw-bold"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Pronunciation" class="control-label fw-bold"></label>
                <input asp-for="Pronunciation" class="form-control" />
                <span asp-validation-for="Pronunciation" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="MeaningKr" class="control-label fw-bold"></label>
                <textarea asp-for="MeaningKr" class="form-control"></textarea>
                <span asp-validation-for="MeaningKr" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="MeaningVn" class="control-label fw-bold"></label>
                <textarea asp-for="MeaningVn" class="form-control"></textarea>
                <span asp-validation-for="MeaningVn" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">Quay lại</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}