@model IEnumerable<Swlh.WebApp.Domain.Entities.Example>

@{
    ViewData["Title"] = "Quản lý ví dụ";
}
<h2>Quản lý ví dụ</h2>
<p>
    <a class="btn btn-success" asp-action="Create">Tạo mới</a>
</p>

<link rel="stylesheet" href="~/lib/datatables/2.3.0/dataTables.dataTables.min.css" />


<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Korean)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vietnamese)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Korean)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vietnamese)
                </td>
                <td class="d-flex gap-1">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/datatables/2.3.0/dataTables.min.js"></script>
<script>
    let table = new DataTable('#myTable');
</script>